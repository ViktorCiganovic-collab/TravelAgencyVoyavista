@model List<TravelAgencyVoyavista.Models.Travelpackage>



<div class="row justify-content-center">
    <div class="col-md-10 col-xs-12 tableForAllTravelPackages">
        <h1 class="text-center text-white">All packages on Voyavista</h1>
        <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
            <table class="table table-striped text-white text-center">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Price</th>
                        <th>Total Rooms</th>
                        <th>Increment stock</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var package in Model)
                    {
                        <tr class="text-white">
                            <td>@package.Name</td>
                            <td>@package.Location</td>
                            <td>$@package.Price</td>
                            <td>@package.Availablerooms</td>
                            <td>
                                <form asp-action="Increment" method="post">
                                    <input type="hidden" name="id" value="@package.TravelpackageId" />
                                    <button type="submit" class="btn btn-primary">Increment</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<footer class="border-top footer text-muted text-white mt-4">
    <div class="text-white">
        &copy; 2024 - VoyaVista - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>

    <div class="socialIconsDivision mt-2">
        <i class="bi bi-instagram fs-5 text-white"></i>
        <i class="bi bi-facebook fs-5 text-white"></i>
        <i class="bi bi-twitter-x fs-5 text-white"></i>
        <i class="bi bi-tiktok fs-5 text-white"></i>
    </div>

    <div class="paymentIconsDivision mt-2">
        <img class="img-fluid" src="https://brandlogos.net/wp-content/uploads/2016/07/mastercard-vector-logo-400x400.png" />
        <img class="img-fluid" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTg4fzD_2wlaVx71EqR_AtxYfDH4gPk61xvBg&s" />
        <img class="img-fluid" src="https://avatars.githubusercontent.com/u/10061420?s=400&v=4" />
    </div>
</footer>
