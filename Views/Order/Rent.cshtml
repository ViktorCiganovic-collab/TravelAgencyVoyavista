@model TravelAgencyVoyavista.Models.Travelpackage

<h2 class="text-center my-5 text-white">Rent @Model.Name</h2>

<div class="row justify-content-center">
    <div class="col-md-6 mb-4 text-white">
        <form asp-action="Rent" method="post">
            <input type="hidden" name="TravelpackageId" value="@Model.TravelpackageId" />
            <div class="form-group">
                <label for="FirstName">First Name</label>
                <input type="text" class="form-control" name="FirstName" required />
            </div>
            <div class="form-group">
                <label for="LastName">Last Name</label>
                <input type="text" class="form-control" name="LastName" required />
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                <input type="text" class="form-control" name="Address" required />
            </div>
            <div class="form-group">
                <label for="NumberOfPersons">Number of Persons</label>
                <input type="number" class="form-control" name="NumberOfPersons" max="5" required />
            </div>
            <div class="form-group">
                <label for="StartDate">Start Date</label>
                <input type="date" class="form-control" name="StartDate" id="startDate" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" required />
            </div>
            <div class="form-group my-2">
                <label for="EndDate">End Date</label>
                <input type="date" class="form-control" name="EndDate" id="endDate" required />
            </div>
            <button type="submit" class="btn btn-primary my-2">Submit</button>
        </form>
    </div>
</div>

<script>
    document.getElementById("startDate").addEventListener("change", function () {
        var startDate = new Date(this.value);
        var minEndDate = new Date(startDate);
        minEndDate.setDate(minEndDate.getDate() + 1);
        document.getElementById("endDate").setAttribute("min", minEndDate.toISOString().split("T")[0]);
    });
</script>

<footer class="border-top footer text-muted text-white">
    <div class="text-white">
        &copy; 2024 - VoyaVista - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>

    <div class="socialIconsDivision">
        <i class="bi bi-instagram fs-5 text-white"></i>
        <i class="bi bi-facebook fs-5 text-white"></i>
        <i class="bi bi-twitter-x fs-5 text-white"></i>
        <i class="bi bi-tiktok fs-5 text-white"></i>
    </div>

    <div class="paymentIconsDivision">
        <img class="img-fluid" src="https://brandlogos.net/wp-content/uploads/2016/07/mastercard-vector-logo-400x400.png" />
        <img class="img-fluid" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTg4fzD_2wlaVx71EqR_AtxYfDH4gPk61xvBg&s" />
        <img class="img-fluid" src="https://avatars.githubusercontent.com/u/10061420?s=400&v=4" />
    </div>
</footer>

