@model List<TravelAgencyVoyavista.Models.Travelpackage>

<h2 class="text-center text-white mt-5">Available Travelpackages for Exotic Places</h2>

<div class="row justify-content-center w-100 p-5">


	@foreach (var package in Model)
	{

		<div class="col-lg-3 col-md-4 col-sm-6">
			<div class="card my-3">
				<img src="@package.imgUrl" class="card-img-top" alt="...">
				<div class="card-body text-black">
					<h5 class="card-title">@package.Name</h5>
					<p class="card-text">Location: @package.Location</p>
					<p class="card-text">Rent Per Night: $@package.Price</p>

					@if (package.Availablerooms > 0)
					{
						<a href="@Url.Action("Rent", "Order", new { id = package.TravelpackageId })" class="btn btn-success my-3">Book Now</a>
					}

					else
					{
						<span class="text-danger">No Rooms Available</span>
					}

					<a href="@Url.Action("Details", "Travelpackage", new { id = package.TravelpackageId } )" class="btn btn-secondary my-3">
						See Details
					</a>
				</div>
			</div>
		</div>
	}



</div>


<footer class="border-top footer text-muted text-white">
	<div class="text-white">
		&copy; 2024 - VoyaVista - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
	</div>

	<div class="socialIconsDivision">
		<i class="bi bi-instagram fs-5 text-white"></i>
		<i class="bi bi-facebook fs-5 text-white"></i>
		<i class="bi bi-twitter-x fs-5 text-white"></i>
		<i class="bi bi-tiktok fs-5 text-white"></i>
	</div>

	<div class="paymentIconsDivision">
		<img class="img-fluid" src="https://brandlogos.net/wp-content/uploads/2016/07/mastercard-vector-logo-400x400.png" />
		<img class="img-fluid" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTg4fzD_2wlaVx71EqR_AtxYfDH4gPk61xvBg&s" />
		<img class="img-fluid" src="https://avatars.githubusercontent.com/u/10061420?s=400&v=4" />
	</div>

</footer>

